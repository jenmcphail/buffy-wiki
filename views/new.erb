<div class="newHeader">
	<h2>Add a New Character</h2>
</div>

<div class= "formWindow">
	<div class=formContainer>
	<form method="POST" action="/characters" id="newForm">
	  <fieldset class="form-group new" align="center">
		Name:  <input type="text" name="character[name]" placeholder="name (first and last)">
		<br>
	  </fieldset>
	  <fieldset class="form-group new" align="center">
		Image URL:  <input type="text" name="character[image_url]" placeholder="image url">
	  </fieldset>
		<br>
	  <fieldset class="form-group new" align="center">
		Description:  <textarea class= "newTextArea" rows="5" cols="50" name="character[description]" placeholder="description"></textarea>
		<br>
	  </fieldset>
	  <fieldset class="form-group new" align="center">
		Season:  S1 <input type="checkbox" name="character[season1]" value="true">  S2 <input type="checkbox" name="character[season2]" value="true">  S3 <input type="checkbox" name="character[season3]" value="true">  S4 <input type="checkbox" name="character[season4]" value="true">  S5 <input type="checkbox" name="character[season5]" value="true">  S6 <input type="checkbox" name="character[season6]" value="true"> S7 <input type="checkbox" name="character[season7]" value="true">
		<br>
	  </fieldset>
	  <fieldset class="form-group new" align="center">
		Type:  <select name="character[character_type]">
			<option value="human">human</option>
			<option value="vampire">vampire</option>
			<option value="demon">demon</option>
			<option value="other">other</option>
		</select>
		<br>
	  </fieldset>
	  <fieldset class="form-group new" align="center">
		<input class= "btn btn-danger newButton" type="submit" name="submit" value="Add Character">
	  </fieldset>
	</form>
	</div>
</div>